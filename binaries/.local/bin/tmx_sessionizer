#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
	path=$1
else
	path=$( (
		fd . "$HOME/Projects/dev" "$HOME/Projects/bold" --type d --exact-depth 1
		echo "leiswatch"
	) | sed "s|^$HOME/||g" | sed "s/\/$//g" | sort | fzf --tmux --reverse --border=sharp --no-info --padding 0)
fi

if [[ -z $path ]]; then
	exit 0
fi

if [[ $path == "leiswatch" ]]; then
	path=$HOME
	name="leiswatch"
else
	path="$HOME/$path"
	name="$(basename "$(dirname "$path")")/$(basename "$path")"
fi

if ! tmux has-session -t="$name" 2>/dev/null; then
	tmux new-session -ds "$name" -c "$path"
	tmux new-window -t="$name" -c "$path"
	tmux new-window -t="$name" -c "$path"
	tmux new-window -t="$name" -c "$path"
	tmux select-window -t "$name":1
fi

tmux switch-client -t "$name"
